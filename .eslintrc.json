{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "indent": ["error", 4],
        "no-confusing-arrow": "off",
        "import/extensions": ["error", "never"],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "react/react-in-jsx-scope": "off",
        "react/style-prop-object": "off" // this will be checked by flow
    },
    "globals": {
        "IS_CLIENT": false
    }
}
